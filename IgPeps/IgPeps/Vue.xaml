                                        <Paragraph FontSize="14pt" FontWeight="Bold">Delta</Paragraph>
                                    </TableCell>
                                </TableRow>
                                <TableRow>
                                    <TableCell>
                                        <Paragraph>Carrefour</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>100</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>1</Paragraph>
                                    </TableCell>
                                </TableRow>
                                <TableRow Background="LightGray">
                                    <TableCell>
                                        <Paragraph>Danone</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>100</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>1</Paragraph>
                                    </TableCell>
                                </TableRow>
                                
